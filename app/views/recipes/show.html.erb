<section>
  <h2 class="recipe-name"><%= @recipe.name %></h2>
  <div>
    <h3>Prepration Time: <%= @recipe.preparation_time %></h3>

    <%= form_with(model: @recipe, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :public %>
        <div class="toggle-switch">
          <%= form.check_box :public, class: "toggle-checkbox", id: "public-toggle" %>
          <label for="public-toggle" class="toggle-label"></label>
        </div>
      </div>
    <% end %>

    <h3>Cooking Time: <%= @recipe.cooking_time %></h3>
    <h3>Steps go here...</h3>
  </div>

  <section class="buttons-section">
    <button type="submit" class="btn">Generate shopping list</button>
    <button type="submit" class="btn">Generate shopping list</button>
  </section>
  <hr>

  <h2><%=link_to 'Back', recipes_path%></h2>
</section>